<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Electrician"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="#E0E0E0">
        <TextView
            android:id="@+id/date"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Sun, Aug 26, 11:30 AM"
            android:textColor="@android:color/black"
            android:layout_gravity="right"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:text="Pending"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/street"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#E0E0E0"
        android:text="Gubbi Thotadappa Rrd, Kempegowda"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="#E0E0E0">
        <TextView
            android:id="@+id/area"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:text="Gandhi Nagar"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="382007"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#E0E0E0">
        <TextView
            android:id="@+id/city"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="Bengaluru"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Karnataka"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/country"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="India"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:src="@drawable/naruto"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/personJobAssignedTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="personJobAssignedTo"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Rate" />
        <TextView
            android:id="@+id/Rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="382007"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tax" />
        <TextView
            android:id="@+id/Tax"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Discount" />
        <TextView
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="382007"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Grand Total" />
        <TextView
            android:id="@+id/grandTotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="382007"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Start Time" />
        <TextView
            android:id="@+id/startTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="382007"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="End Time" />
        <TextView
            android:id="@+id/endTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="382007"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Payment Status" />
        <TextView
            android:id="@+id/paymentStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Pending"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Job Details"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Services required for?"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/servicesRequiredFor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Lights, Switches, Fan repair"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:layout_height="match_parent"
            android:text="Where do you requiure the service?"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/servicePlace"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="match_parent"
            android:text="Office"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Cancel Booking"
        android:background="@color/colorAccent"
        android:textColor="@android:color/black"/>

</LinearLayout>